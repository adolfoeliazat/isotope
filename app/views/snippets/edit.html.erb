<h1>Editing snippet</h1>

<% form_for(@snippet) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :snippet %><br />
    <%= f.text_area :snippet %>
  </p>
  <p>
    <%= f.label :view %><br />
    <%= f.check_box :view %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @snippet %> |
<%= link_to 'Back', snippets_path %>